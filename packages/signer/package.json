{
	"name": "luminadex-signer",
	"private": true,
	"type": "module",
	"scripts": {
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"db:seed": "bun run scripts/seed.ts",
		"schema:print": "bun run graphql/printSchema.ts",
		"services:start": "docker compose up -d",
		"services:stop": "docker compose down",
		"start": "bun src/index.ts",
		"web": "bun ./index.html",
		"dev": "bun run --watch src/index.ts",
		"dev:uws": "tsx src/uws.ts",
		"all": "concurrently 'bun run services:start' 'bun run start' 'bun run web'",
		"format": "dprint check",
		"format:fix": "dprint fmt --verbose",
		"test": "vitest run --testTimeout=150000"
	},
	"dependencies": {
		"@infisical/sdk": "^4.0.2",
		"@lumina-dex/contracts": "workspace:^",
		"@lumina-dex/sdk": "workspace:^",
		"@pothos/core": "^4.7.1",
		"bullmq": "^5.53.2",
		"drizzle-orm": "beta",
		"graphql-yoga": "^5.14.0",
		"ioredis": "^5.6.1",
		"o1js": "2.4.0",
		"postgres": "^3.4.7",
		"uWebSockets.js": "github:uNetworking/uWebSockets.js#v20.52.0"
	},
	"devDependencies": {
		"concurrently": "^9.2.0",
		"dotenv": "^17.2.0",
		"drizzle-kit": "beta",
		"graphql": "^16.11.0",
		"typescript": "^5.8.3",
		"valibot": "^1.0.0",
		"vitest": "^3.2.4"
	}
}
